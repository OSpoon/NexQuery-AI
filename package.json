{
  "name": "nexquery-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "pnpm -r run dev",
    "dev:all": "docker compose up -d && pnpm dev",
    "build": "pnpm -r run build",
    "install:all": "pnpm install -r",
    "lint": "eslint . --fix",
    "type-check": "pnpm -r run type-check",
    "postinstall": "pnpm --filter @nexquery/shared build",
    "test:e2e": "pnpm --filter @nexquery/e2e test",
    "test:e2e:ui": "pnpm --filter @nexquery/e2e test:ui",
    "prepare": "simple-git-hooks",
    "backend:dev": "pnpm --filter backend dev",
    "backend:build": "pnpm --filter backend build",
    "backend:test": "pnpm --filter backend test",
    "backend:migrate": "pnpm --filter backend exec node ace migration:run",
    "backend:seed": "pnpm --filter backend exec node ace db:seed",
    "backend:fresh": "pnpm --filter backend exec node ace migration:fresh --seed",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:build": "pnpm --filter frontend build",
    "shared:build": "pnpm --filter @nexquery/shared build",
    "mp:dev": "pnpm --filter miniprogram dev:mp-weixin",
    "mp:build": "pnpm --filter miniprogram build:mp-weixin",
    "kill:3000": "lsof -ti:3000 | xargs kill -9",
    "kill:3008": "lsof -ti:3008 | xargs kill -9",
    "kill:all": "pnpm kill:3000 && pnpm kill:3008"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/node": "22.10.1",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,d.ts,vue,json}": "eslint --fix"
  },
  "workspaces": [
    "backend",
    "frontend",
    "miniprogram",
    "packages/*"
  ]
}
